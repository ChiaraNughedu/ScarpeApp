
@model IEnumerable<ScarpeApp.Models.Articolo>
<div class="containerVetrina">
<h1 class="pb-4 text-white">Vetrina</h1>
<div class="row">
    @foreach (var articolo in Model)
    {
        <div class="col-md-4">
            <div class="card my-2 borderCarta" style="max-width: 450px">
                <img class="card-img-top img-thumbnail p-1" src="@articolo.ImmagineCopertina" alt="Immagine @articolo.Nome">
                <div class="card-body">
                    <h5 class="card-title fw-bold fs-5">@articolo.Nome</h5>
					<p class="card-text"><strong>Prezzo:</strong> @articolo.Prezzo.ToString("C")</p>
                    <a href="@Url.Action("Dettaglio", "Articoli", new { id = articolo.Id })" class="btn btn-secondary px-4">Dettagli</a>
                </div>
            </div>
        </div>
    }
</div>
</div>