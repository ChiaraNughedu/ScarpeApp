
@model IEnumerable<ScarpeApp.Models.Articolo>

<h1 class="pb-3">Vetrina</h1>
<div class="row">
    @foreach (var articolo in Model)
    {
        <div class="col-md-4">
            <div class="card my-2 border border-black rounded-3">
                <img class="card-img-top" src="@articolo.ImmagineCopertina" alt="Immagine @articolo.Nome">
                <div class="card-body">
                    <h5 class="card-title">@articolo.Nome</h5>
                    <p class="card-text">Prezzo: @articolo.Prezzo.ToString("C")</p>
                    <a href="@Url.Action("Dettaglio", "Articoli", new { id = articolo.Id })" class="btn btn-secondary px-3">Dettagli</a>
                </div>
            </div>
        </div>
    }
</div>
